<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/userImageView"
        android:src="@drawable/avatar_empty"
        style="@style/GridImage"/>

    <ImageView
        android:id="@+id/checkImageView"
        android:src="@drawable/avatar_selected"
        style="@style/GridImage"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:maxLines="1"
        android:padding="4dp"
        android:id="@+id/nameLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/userImageView"
        android:background="@color/pressed_color"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:maxLines="1"
        android:padding="2dp"
        android:id="@+id/lastNameLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/nameLabel"
        android:background="@color/pressed_color"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:maxLines="1"
        android:padding="2dp"
        android:id="@+id/squadronLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/lastNameLabel"
        android:background="@color/pressed_color"/>
</RelativeLayout>